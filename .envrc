# Phobos Development Environment
# This file enables automatic environment setup with direnv

# Use flake if available, fallback to shell.nix
if has nix_direnv_version || has nix; then
  if [[ -f flake.nix ]]; then
    echo "ðŸš€ Loading Phobos development environment via flake..."
    use flake
  elif [[ -f shell.nix ]]; then
    echo "ðŸš€ Loading Phobos development environment via shell.nix..."
    use nix
  fi
fi

# Set environment variables
export RUST_BACKTRACE=1
export RUST_LOG=debug
export PHOBOS_DEV=1

# Add local bin to PATH for development
PATH_add ./target/release
PATH_add ./target/debug

echo "âœ… Phobos development environment loaded!"
echo "ðŸ“¦ Run 'cargo build --release' to build optimized binary"
echo "ðŸ”§ Run 'cargo test' to run tests"
echo "ðŸ“Š Run 'cargo bench' to run benchmarks"